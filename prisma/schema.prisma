// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/db.db"
}

model User {
  id            String        @id @unique
  name          String
  username      String        @unique
  email         String        @unique
  passwd        String
  createdAt     DateTime
  updatedAt     DateTime?
  refresh_token refreshToken?

  @@map("users")
}

model refreshToken {
  id        String @id @unique
  expiresIn Int
  user      User   @relation(fields: [userId], references: [id])
  userId    String @unique

  @@map("refresh_Token")
}
